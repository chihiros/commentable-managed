{
  "name": "commentable-viewer",
  "version": "2.1.4",
  "description": "コメンタブルの表示をデスクトップ上に投影するアプリケーション．終了する場合はタスクバーから終了を選択してください．",
  "scripts": {
    "build": "run-p build:main build:render",
    "build:main": "tsc -p tsconfig.json",
    "build:render": "parcel build src/render/index.html --public-url ./ --dist-dir ./dist/render",
    "start": "run-s build start:electron",
    "start:electron": "electron dist/main.js"
  },
  "keywords": [],
  "author": "",
  "license": "CC0-1.0",
  "devDependencies": {
    "@parcel/transformer-typescript-tsc": "^2.8.0",
    "@types/electron-prompt": "^1.4.0",
    "@types/node": "^18.11.9",
    "electron": "^22.0.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.8.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "electron-prompt": "^1.7.0",
    "electron-reload": "^2.0.0-alpha.1",
    "update-electron-app": "^2.0.1"
  }
}
